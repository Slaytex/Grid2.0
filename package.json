{
  "name": "grid-2.0",
  "version": "2.0.0",
  "description": "Grid 2.0 - The Enhanced Grid Generator",
  "main": "src/main.js",
  "author": "Chris Jacobs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "pack:win": "electron-builder --win --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --publish=never",
    "dist:all": "electron-builder --mac --win --linux --publish=never"
  },
  "build": {
    "appId": "com.chrisjacobs.grid2",
    "productName": "Grid 2.0",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "Chris Jacobs",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Grid 2.0"
    },
    "linux": {
      "icon": "icons_export",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "description": "Grid 2.0 - The Enhanced Grid Generator"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "files": [
      "src/**/*",
      "package.json",
      "build/icon.icns",
      "build/icon.ico"
    ]
  },
  "devDependencies": {
    "electron": "24.8.8",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "micro": "^10.0.1",
    "tone": "^15.0.4",
    "ws": "^8.18.0"
  }
}
